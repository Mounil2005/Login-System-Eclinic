# ===========================================
# E-Clinic Authentication Service Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -----------------------------------------
# Database Configuration (Supabase PostgreSQL)
# -----------------------------------------
# Get this from your Supabase project settings > Database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# -----------------------------------------
# JWT Configuration
# -----------------------------------------
# Generate a strong secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
# Token expiry in minutes (1440 = 24 hours)
JWT_EXPIRY_MINUTES=1440

# -----------------------------------------
# MSG91 Configuration
# -----------------------------------------
# Get these from your MSG91 dashboard
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_TEMPLATE_ID=your-msg91-template-id
# Sender ID (max 6 characters)
MSG91_SENDER_ID=ECLNC

# -----------------------------------------
# OTP Configuration
# -----------------------------------------
# OTP validity period in minutes
OTP_EXPIRY_MINUTES=5
# Maximum verification attempts before lockout
OTP_MAX_ATTEMPTS=3
# Cooldown period between OTP resends in seconds
OTP_RESEND_COOLDOWN_SECONDS=60

# -----------------------------------------
# Application Settings
# -----------------------------------------
# Set to False in production
DEBUG=True
# API version prefix
API_VERSION=v1
